<div class="container mx-auto">
  <div
    class="max-w-xl mx-auto bg-white mt-5 rounded-lg shadow-2xl shadow-red-500 p-8"
  >
    <h1
      class="text-3xl font-bold mb-6 text-center text-gray-700 underline underline-offset-8"
    >
      Post a New Job
    </h1>
    <form method="post" action="/jobs" enctype="multipart/form-data">
      <div class="mb-4">
        <label class="block text-gray-700 mb-2" for="jobCategory"
          >Select Job Category</label
        >
        <select
          id="jobCategory"
          name="jobCategory"
          class="block w-full p-2 border rounded-lg"
        >
          <option>Select Job Category</option>
          <option>Tech</option>
          <option>Non-Tech</option>
        </select>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 mb-2" for="jobDesignation"
          >Select Job Designation</label
        >
        <select
          id="jobDesignation"
          name="jobDesignation"
          class="block w-full p-2 border rounded-lg"
        >
          <option>Select Job Designation</option>
          <option>Software Engineer</option>
          <option>Data Scientist</option>
          <option>Product Manager</option>
          <option>Designer</option>
          <option>HR Manager</option>
          <option>Sales Executive</option>
          <option>Marketing Manager</option>
          <option>Content Writer</option>
          <option>QA Engineer</option>
          <option>DevOps Engineer</option>
        </select>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 mb-2" for="jobLocation"
          >Enter Job Location</label
        >
        <input
          type="text"
          id="jobLocation"
          name="jobLocation"
          class="block w-full p-2 border rounded-lg"
          placeholder="Enter job location"
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 mb-2" for="companyName"
          >Company Name</label
        >
        <input
          type="text"
          id="companyName"
          name="companyName"
          class="block w-full p-2 border rounded-lg"
          placeholder="Company Name"
        />
      </div>
      <div class="flex mb-4 space-x-4">
        <div class="flex-1">
          <label class="block text-gray-700 mb-2" for="salary"
            >Enter Salary</label
          >
          <input
            type="text"
            id="salary"
            name="salary"
            class="block w-full p-2 border rounded-lg"
            placeholder="Enter salary"
          />
        </div>
        <div class="flex-1">
          <label class="block text-gray-700 mb-2" for="totalPositions"
            >Total Positions</label
          >
          <input
            type="number"
            id="totalPositions"
            name="totalPositions"
            class="block w-full p-2 border rounded-lg"
            placeholder="Total Positions"
          />
        </div>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 mb-2" for="skills"
          >Select Skills Required for This Job</label
        >
        <select
          id="skills"
          name="skills"
          class="block w-full p-2 border rounded-lg"
          multiple
        >
          <option>React</option>
          <option>NodeJs</option>
          <option>Angular</option>
          <option>Python</option>
          <option>Java</option>
          <option>Ruby on Rails</option>
          <option>PHP</option>
          <option>JavaScript</option>
          <option>HTML/CSS</option>
          <option>SQL</option>
        </select>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 mb-2" for="applyBy">Apply By</label>
        <input
          type="date"
          id="applyBy"
          name="applyBy"
          class="block w-full p-2 border rounded-lg"
        />
      </div>
      <div>
        <button
          type="submit"
          class="w-full bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600"
        >
          Submit
        </button>
      </div>
    </form>
  </div>
</div>
