<div class="w-full">
  <div class="relative w-full h-[400px] sm:h-[320px]" id="home">
    <div class="absolute inset-0 opacity-70">
      <img
        src="/assets/hero-page.jpg"
        alt="Background Image"
        class="object-cover object-center w-full h-full contrast-125 drop-shadow-md sm:blur-sm"
      />
    </div>
    <div
      class="absolute inset-9 flex flex-col md:flex-row items-center justify-between"
    >
      <div class="md:w-1/2 mb-4 md:mb-0 sm:ml-24">
        <h1
          class="text-grey-700 font-semibold text-2xl sm:text-4xl md:text-5xl leading-tight sm:mb-2 font-serif text-animation"
        >
          A comprehensive platform for reliable
        </h1>
        <p class="font-regular text-lg sm:text-xl mb-8 mt-4 font-roboto">
          Job opportunities and internships.
        </p>
        <p class="font-regular text-sm mb-4 font-semibold font-mono">
          Get Discovered. Get Hired.
        </p>
        <div class="flex flex-col sm:flex-row">
          <a
            href="/jobs"
            class="hover-bg-animation px-6 py-3 bg-black text-white font-medium rounded-sm transition duration-200 mb-3"
          >
            <span>I'm a Job Seeker</span>
          </a>
          <a
            href="/login"
            class="hover-bg-animation px-6 py-3 bg-black text-white font-medium rounded-sm transition duration-200 mb-3 sm:ml-5"
          >
            <span>I'm a Recruiter</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- our services section -->
  <section class="" id="services" style="margin-top: 30px">
    <div
      class="container w-full flex flex-col sm:flex justify-center items-center mx-auto px-4"
    >
      <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center font-roboto">
        Recent <span class="underline underline-offset-8">Jobs</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 w-[80%]">
        <% data.forEach(element =>{ %>

        <div class="bg-gray-50 text-white p-6 rounded-lg shadow-lg max-w-sm">
          <div class="flex justify-between items-center">
            <span class="text-sm text-green-400">Actively hiring</span>
            <span class="text-xs bg-green-500 text-white py-1 px-2 rounded-full"
              >Hiring</span
            >
          </div>
          <h2 class="text-2xl font-bold mt-2 text-gray-800 font-roboto">
            <%= element.companyName %>
          </h2>
          <p class="text-blue-400">
            <%= element.jobCategory %> <span class="text-blue-500">SDE</span>
          </p>
          <p class="mt-2 flex items-center text-gray-400">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="w-5 h-5 mr-2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.657 16.657a4 4 0 01-5.657 0L12 16l-.343.343a4 4 0 01-5.657 0l-4-4a4 4 0 010-5.657l4-4a4 4 0 015.657 0L12 8l.343-.343a4 4 0 015.657 0l4 4a4 4 0 010 5.657l-4 4z"
              />
            </svg>
            <%= element.jobLocation %>
          </p>
          <p class="mt-2 text-xl font-semibold text-cyan-800">
            <%= element.salary %>
          </p>
          <div class="flex flex-wrap mt-4">
            <% element.skills.forEach(skill =>{ %> <% if(skill ) %>
            <span
              class="text-xs bg-gray-100 border hover:bg-cyan-200 hover:text-black transition shadow-xl text-blue-400 py-1 px-3 rounded-full mr-2 mt-2"
              ><%= skill%></span
            >

            <% }) %>
          </div>
          <button
            class="mt-4 bg-green-600 text-white py-2 px-4 rounded-lg w-full hover:bg-green-800"
          >
            <a href="/jobs/<%=element.id%>">View Details</a>
          </button>
        </div>
        <% }) %>
      </div>
    </div>
  </section>
</div>

<style>
  .hover-bg-animation {
    position: relative;
    overflow: hidden;
    display: inline-block;
  }

  .hover-bg-animation::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgb(240, 244, 50);
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;
    z-index: 1;
  }

  .hover-bg-animation:hover::before {
    transform: translateX(0);
  }

  .hover-bg-animation:hover span {
    color: black;
  }

  .hover-bg-animation span {
    position: relative;
    z-index: 2;
    transition: color 0.3s ease-in-out;
  }
</style>
